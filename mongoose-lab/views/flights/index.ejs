<%- include('../partials/header') %>

<h2>Flight List</h2>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight No</th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(f => { %>
      <tr>
        <td><%= f.airline %></td>
        <td><%= f.airport %></td>
        <td><%= f.flightNo %></td>
        <td><a href="/flights/<%= f._id %>">INFO</a></td>
      </tr>
      <% }) %>
    </tbody>
</table>

<%- include('../partials/footer') %>